{
  "name": "railway-free-ecommerce",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:cms": "npm --workspace apps/cms run build",
    "build:web": "npm --workspace apps/web run build",
    "dev": "npm run dev --workspaces --if-present",
    "dev:cms": "npm --workspace apps/cms run develop",
    "dev:web": "npm --workspace apps/web run dev",
    "lint:web": "npm --workspace apps/web run lint",
    "prepare:production": "npm install && npm run build",
    "start": "npm run start --workspaces --if-present",
    "start:cms": "npm --workspace apps/cms run start",
    "start:web": "npm --workspace apps/web run start",
    "test:web": "npm --workspace apps/web run test:build"
  }
}