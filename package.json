{
  "name": "railway-free-ecommerce",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm --workspace apps/web run dev",
    "build:web": "npm --workspace apps/web run build",
    "start:web": "npm --workspace apps/web run start",
    "lint:web": "npm --workspace apps/web run lint",
    "test:web": "npm --workspace apps/web run test:build",
    "prepare:production": "npm --workspace apps/web install && npm run build:web"
  }
}